---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Timeline from '../components/features/about/Timeline.astro';
import { Image } from 'astro:assets';
import { Briefcase, Layers, Cpu } from 'lucide-astro';
import { db } from '../lib/db';
import { profiles as profilesTable, timeline as timelineTable, gear as gearTable, skills as skillsTable } from '../lib/db/schema';
import { desc } from 'drizzle-orm';

// Fetch data from database
const profileData = await db.select().from(profilesTable).get();
const timelineData = await db.select().from(timelineTable).orderBy(desc(timelineTable.startDate)).all();
const gearData = await db.select().from(gearTable).orderBy(gearTable.order).all();
const skillsData = await db.select().from(skillsTable).orderBy(skillsTable.order).all();

// Transform to match existing structure
const profile = {
  name: profileData!.name,
  roles: profileData!.roles,
  stats: {
    experience: profileData!.experienceYears.toString(),
    projects: `${profileData!.projectCount}+`
  },
  timeline: timelineData.map(item => ({
    year: item.startDate,
    title: item.title,
    company: item.organization || '',
    description: item.description
  })),
  gear: gearData.map(item => item.name),
  skills: {
    languages: skillsData.filter(s => s.category === 'languages').map(s => s.name),
    frameworks: skillsData.filter(s => s.category === 'frameworks').map(s => s.name),
    others: skillsData.filter(s => s.category === 'others').map(s => s.name)
  }
};
---

<Layout title="About | gae">
  <Header />

  <main class="min-h-screen relative overflow-hidden">
      <!-- Background Blobs -->
      <div class="absolute top-0 right-0 -z-10 w-2/3 h-screen bg-[radial-gradient(circle_at_top_right,var(--color-accent-indigo),transparent)] opacity-5 blur-[120px] pointer-events-none"></div>
      <div class="absolute bottom-0 left-0 -z-10 w-2/3 h-[50vh] bg-[radial-gradient(circle_at_bottom_left,var(--color-accent-teal),transparent)] opacity-5 blur-[120px] pointer-events-none"></div>

      <div class="max-w-5xl mx-auto px-4 pt-32 pb-20">

        <!-- Intro Section: Split Layout -->
        <section class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center mb-24">

            <!-- Left: Typography & Intro -->
            <div class="order-2 md:order-1 space-y-8 animate-fade-in">
                <div class="space-y-4">
                    <span class="text-xs font-mono font-medium text-accent-teal tracking-widest uppercase">Profile</span>
                    <h1 class="text-5xl lg:text-7xl font-display font-bold leading-tight text-ink">
                        Hello, I'm <br />
                        <span class="text-transparent bg-clip-text bg-linear-to-r from-accent-indigo to-accent-teal">{profile.name}</span>.
                    </h1>
                </div>

                <div class="flex flex-wrap gap-2">
                     {profile.roles.map((role) => (
                         <div class="px-3.5 py-1.5 rounded-full bg-zinc-50 border border-zinc-200 text-xs font-medium text-zinc-600 hover:bg-white hover:border-accent-indigo/30 hover:scale-105 hover:shadow-md transition-all duration-300 cursor-default">
                            {role}
                         </div>
                     ))}
                </div>

                <div class="grid grid-cols-2 gap-4 pt-4 max-w-sm">
                    <div class="glass-card p-5 rounded-2xl flex flex-col gap-1 hover:scale-105 hover:shadow-xl transition-all duration-300 group cursor-default">
                        <span class="text-3xl font-display font-bold text-ink group-hover:text-accent-indigo transition-colors">{profile.stats.experience}</span>
                        <span class="text-xs text-ink-muted uppercase tracking-wider">Years Exp</span>
                    </div>
                     <div class="glass-card p-5 rounded-2xl flex flex-col gap-1 hover:scale-105 hover:shadow-xl transition-all duration-300 group cursor-default">
                        <span class="text-3xl font-display font-bold text-ink group-hover:text-accent-teal transition-colors">{profile.stats.projects}</span>
                        <span class="text-xs text-ink-muted uppercase tracking-wider">Projects</span>
                    </div>
                </div>
            </div>

            <!-- Right: Visual Profile Card -->
            <div class="order-1 md:order-2 flex justify-center md:justify-end animate-slide-up">
                 <div class="relative w-72 md:w-80 aspect-4/5 glass-card rounded-[2.5rem] p-4 rotate-3 hover:rotate-0 hover:scale-105 transition-all duration-700 group shadow-2xl hover:shadow-[0_40px_80px_rgba(0,0,0,0.15)] border-t border-white/50 cursor-pointer">
                    <div class="relative w-full h-full rounded-4xl bg-zinc-50 overflow-hidden border border-zinc-100">
                         <!-- Placeholder/Real Image Area -->
                         <div class="absolute inset-0 bg-linear-to-br from-indigo-50 to-teal-50 flex items-center justify-center">
                            <img src="/gae.svg" alt="gae" class="w-32 h-32 opacity-80 mix-blend-multiply" />
                         </div>

                         <!-- Overlay Content -->
                         <div class="absolute bottom-0 left-0 w-full p-6 bg-linear-to-t from-white/95 to-transparent">
                             <div class="flex items-center gap-2 mb-1">
                                <div class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></div>
                                <span class="text-xs font-mono text-zinc-500">Online</span>
                             </div>
                             <p class="font-display font-medium text-xl text-ink">Tokyo, JPN</p>
                         </div>
                    </div>
                 </div>
            </div>
        </section>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">

            <!-- Main Content: Timeline -->
            <div class="lg:col-span-7 space-y-12">
                 <section>
                    <div class="flex items-center gap-3 mb-8">
                        <div class="p-2 rounded-lg bg-indigo-50 text-accent-indigo">
                            <Briefcase class="w-5 h-5" />
                        </div>
                        <h2 class="text-2xl font-display font-bold text-ink">Career History</h2>
                    </div>

                    <Timeline events={profile.timeline} />
                </section>
            </div>


            <!-- Sidebar: Gear / Stack -->
            <div class="lg:col-span-5 space-y-8">
                <!-- Tech & Gear Section -->
                <section class="relative p-8 rounded-3xl bg-linear-to-br from-white/70 via-white/60 to-teal-50/20 border-2 border-teal-100/50 backdrop-blur-sm hover:from-white/90 hover:via-white/80 hover:to-teal-50/30 hover:border-teal-200/60 hover:shadow-2xl hover:shadow-teal-500/10 transition-all duration-500 group overflow-hidden">
                    <!-- Decorative Elements -->
                    <div class="absolute top-0 right-0 w-40 h-40 bg-linear-to-br from-teal-100/30 to-transparent rounded-full blur-3xl group-hover:scale-150 transition-transform duration-700"></div>
                    <div class="absolute bottom-0 left-0 w-32 h-32 bg-linear-to-tr from-cyan-100/20 to-transparent rounded-full blur-2xl group-hover:scale-125 transition-transform duration-700"></div>

                    <!-- Content -->
                    <div class="relative z-10">
                        <div class="flex items-center gap-3 mb-6">
                            <div class="p-2.5 rounded-xl bg-linear-to-br from-teal-50 to-cyan-50 text-accent-teal shadow-lg shadow-teal-500/20 group-hover:shadow-xl group-hover:shadow-teal-500/30 group-hover:scale-110 transition-all duration-300">
                                <Cpu class="w-5 h-5" />
                            </div>
                            <h2 class="text-2xl font-display font-bold text-ink group-hover:text-accent-teal transition-colors duration-300">Tech & Gear</h2>
                            <div class="ml-auto flex gap-1">
                                <div class="w-1 h-1 rounded-full bg-teal-300/50 group-hover:bg-teal-400 transition-colors"></div>
                                <div class="w-1 h-1 rounded-full bg-teal-300/30 group-hover:bg-teal-300 transition-colors"></div>
                                <div class="w-1 h-1 rounded-full bg-teal-300/20 group-hover:bg-teal-200 transition-colors"></div>
                            </div>
                        </div>

                        <div class="flex flex-wrap gap-2">
                            {profile.gear.map((tool, index) => (
                                <div
                                    class="group/item px-4 py-2.5 rounded-xl flex items-center gap-2 bg-white/80 border border-teal-100/50 hover:border-teal-300/70 hover:bg-linear-to-r hover:from-white hover:via-teal-50/40 hover:to-cyan-50/30 hover:scale-105 hover:-translate-y-1 hover:shadow-lg hover:shadow-teal-500/20 transition-all duration-300 cursor-default backdrop-blur-sm"
                                    style={`animation-delay: ${index * 50}ms`}
                                >
                                    <span class="w-1.5 h-1.5 rounded-full bg-teal-200 group-hover/item:bg-accent-teal group-hover/item:scale-125 group-hover/item:shadow-lg group-hover/item:shadow-teal-500/50 transition-all duration-300"></span>
                                    <span class="text-sm font-medium text-zinc-700 group-hover/item:text-accent-teal transition-colors duration-200">{tool}</span>
                                </div>
                            ))}
                        </div>
                    </div>
                </section>

                <!-- Skills Section -->
                <section class="relative p-8 rounded-3xl bg-linear-to-br from-white/70 via-white/60 to-indigo-50/20 border-2 border-indigo-100/50 backdrop-blur-sm hover:from-white/90 hover:via-white/80 hover:to-indigo-50/30 hover:border-indigo-200/60 hover:shadow-2xl hover:shadow-indigo-500/10 transition-all duration-500 group overflow-hidden">
                    <!-- Decorative Elements -->
                    <div class="absolute top-0 right-0 w-48 h-48 bg-linear-to-br from-indigo-100/30 to-transparent rounded-full blur-3xl group-hover:scale-150 transition-transform duration-700"></div>
                    <div class="absolute bottom-0 left-0 w-36 h-36 bg-linear-to-tr from-purple-100/20 to-transparent rounded-full blur-2xl group-hover:scale-125 transition-transform duration-700"></div>
                    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-indigo-50/10 rounded-full blur-3xl"></div>

                    <!-- Content -->
                    <div class="relative z-10">
                        <div class="flex items-center gap-3 mb-6">
                            <div class="p-2.5 rounded-xl bg-linear-to-br from-indigo-50 to-purple-50 text-accent-indigo shadow-lg shadow-indigo-500/20 group-hover:shadow-xl group-hover:shadow-indigo-500/30 group-hover:scale-110 transition-all duration-300">
                                <Layers class="w-5 h-5" />
                            </div>
                            <h2 class="text-2xl font-display font-bold text-ink group-hover:text-accent-indigo transition-colors duration-300">Skills</h2>
                            <div class="ml-auto flex gap-1">
                                <div class="w-1 h-1 rounded-full bg-indigo-300/50 group-hover:bg-indigo-400 transition-colors"></div>
                                <div class="w-1 h-1 rounded-full bg-indigo-300/30 group-hover:bg-indigo-300 transition-colors"></div>
                                <div class="w-1 h-1 rounded-full bg-indigo-300/20 group-hover:bg-indigo-200 transition-colors"></div>
                            </div>
                        </div>

                    <div class="space-y-6">
                        <!-- Languages -->
                        <div>
                            <h3 class="text-xs font-mono text-zinc-500 uppercase tracking-wider mb-3">Languages</h3>
                            <div class="flex flex-wrap gap-2">
                                {profile.skills.languages.map((lang, index) => (
                                    <div
                                        class="group/item px-4 py-2.5 rounded-xl flex items-center gap-2 bg-white/80 border border-indigo-100/50 hover:border-indigo-300/70 hover:bg-linear-to-r hover:from-white hover:via-indigo-50/40 hover:to-purple-50/30 hover:scale-105 hover:-translate-y-1 hover:shadow-lg hover:shadow-indigo-500/20 transition-all duration-300 cursor-default backdrop-blur-sm"
                                        style={`animation-delay: ${index * 50}ms`}
                                    >
                                        <span class="w-1.5 h-1.5 rounded-full bg-indigo-200 group-hover/item:bg-accent-indigo group-hover/item:scale-125 group-hover/item:shadow-lg group-hover/item:shadow-indigo-500/50 transition-all duration-300"></span>
                                        <span class="text-sm font-medium text-zinc-700 group-hover/item:text-accent-indigo transition-colors duration-200">{lang}</span>
                                    </div>
                                ))}
                            </div>
                        </div>

                        <!-- Frameworks -->
                        <div>
                            <h3 class="text-xs font-mono text-zinc-500 uppercase tracking-wider mb-3">Frameworks</h3>
                            <div class="flex flex-wrap gap-2">
                                {profile.skills.frameworks.map((tech, index) => (
                                    <div
                                        class="group/item px-4 py-2.5 rounded-xl flex items-center gap-2 bg-white/80 border border-indigo-100/50 hover:border-indigo-300/70 hover:bg-linear-to-r hover:from-white hover:via-indigo-50/40 hover:to-purple-50/30 hover:scale-105 hover:-translate-y-1 hover:shadow-lg hover:shadow-indigo-500/20 transition-all duration-300 cursor-default backdrop-blur-sm"
                                        style={`animation-delay: ${index * 50}ms`}
                                    >
                                        <span class="w-1.5 h-1.5 rounded-full bg-indigo-200 group-hover/item:bg-accent-indigo group-hover/item:scale-125 group-hover/item:shadow-lg group-hover/item:shadow-indigo-500/50 transition-all duration-300"></span>
                                        <span class="text-sm font-medium text-zinc-700 group-hover/item:text-accent-indigo transition-colors duration-200">{tech}</span>
                                    </div>
                                ))}
                            </div>
                        </div>

                        <!-- Others -->
                        <div>
                            <h3 class="text-xs font-mono text-zinc-500 uppercase tracking-wider mb-3">Others</h3>
                            <div class="flex flex-wrap gap-2">
                                {profile.skills.others.map((tech, index) => (
                                    <div
                                        class="group/item px-4 py-2.5 rounded-xl flex items-center gap-2 bg-white/80 border border-indigo-100/50 hover:border-indigo-300/70 hover:bg-linear-to-r hover:from-white hover:via-indigo-50/40 hover:to-purple-50/30 hover:scale-105 hover:-translate-y-1 hover:shadow-lg hover:shadow-indigo-500/20 transition-all duration-300 cursor-default backdrop-blur-sm"
                                        style={`animation-delay: ${index * 50}ms`}
                                    >
                                        <span class="w-1.5 h-1.5 rounded-full bg-indigo-200 group-hover/item:bg-accent-indigo group-hover/item:scale-125 group-hover/item:shadow-lg group-hover/item:shadow-indigo-500/50 transition-all duration-300"></span>
                                        <span class="text-sm font-medium text-zinc-700 group-hover/item:text-accent-indigo transition-colors duration-200">{tech}</span>
                                    </div>
                                ))}
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Policy Section -->
                <section class="p-6 rounded-3xl bg-linear-to-br from-indigo-50/50 to-zinc-50 border border-indigo-100 text-ink relative overflow-hidden group hover:shadow-lg transition-shadow duration-500">
                    <div class="absolute top-0 right-0 w-32 h-32 bg-accent-indigo/5 blur-3xl rounded-full -translate-y-1/2 translate-x-1/2 group-hover:bg-accent-indigo/10 transition-colors"></div>

                    <Layers class="w-8 h-8 text-accent-indigo mb-4" />
                    <h3 class="text-lg font-bold font-display mb-2">Policy</h3>
                    <p class="text-sm text-ink-muted leading-relaxed text-balance">
                        技術は課題解決の手段．<br>
                        常にユーザーの視点に立ち，シンプルかつ堅牢な実装で，長く愛されるシステムを作ります．
                    </p>
                </section>
            </div>

        </div>

      </div>

  </main>

  <Footer />
</Layout>
