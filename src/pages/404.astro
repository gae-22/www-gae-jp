---
import Layout from '../layouts/Layout.astro';
import { Rocket } from 'lucide-astro';
---

<Layout title="404 | Lost in Space">
  <main class="min-h-screen w-full flex flex-col items-center justify-center relative overflow-hidden">

    <!-- Background Stars -->
    <div class="absolute inset-0 z-0">
        {[...Array(20)].map(() => (
            <div
                class="absolute rounded-full bg-white opacity-20 animate-pulse"
                style={{
                    top: `${Math.random() * 100}%`,
                    left: `${Math.random() * 100}%`,
                    width: `${Math.random() * 4 + 1}px`,
                    height: `${Math.random() * 4 + 1}px`,
                    animationDuration: `${Math.random() * 3 + 1}s`
                }}
            ></div>
        ))}
    </div>

    <!-- Content -->
    <div class="relative z-10 text-center space-y-8 animate-fade-in">
        <div class="relative inline-block">
            <h1 class="text-[10rem] font-display font-bold leading-none text-transparent bg-clip-text bg-linear-to-b from-white/10 to-transparent">
                404
            </h1>
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
                <Rocket class="w-20 h-20 text-neon-violet animate-bounce" />
            </div>
        </div>

        <div class="space-y-2">
            <h2 class="text-2xl font-bold text-white">Signal Lost</h2>
            <p class="text-text-muted">The coordinates you are looking for do not exist.</p>
        </div>

        <a href="/" class="inline-flex items-center gap-2 px-8 py-3 rounded-full bg-white text-black font-semibold hover:scale-105 transition-transform">
            Return to Base
        </a>
    </div>

  </main>
</Layout>
