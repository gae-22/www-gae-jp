---
import { Home, PenTool, User, Github} from 'lucide-astro';

const navItems = [
  { label: 'ホーム', href: '/', icon: Home },
  { label: 'ブログ', href: '/blog', icon: PenTool },
  { label: 'プロフィール', href: '/about', icon: User },
];

const socialItems = [
  { label: 'GitHub', href: 'https://github.com', icon: Github },
];
---

<header class="fixed top-6 left-1/2 -translate-x-1/2 z-50 w-full max-w-lg px-4">
  <nav class="glass rounded-full px-6 py-3 flex items-center justify-between transition-all duration-300 hover:glow-box">

    <!-- Internal Links -->
    <ul class="flex items-center gap-6">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="flex items-center gap-2 text-sm text-text-muted hover:text-text-main transition-colors group relative"
          >
            <item.icon class="w-4 h-4" />
            <span class="font-medium">{item.label}</span>
            <span class="absolute -bottom-1 left-0 w-0 h-px bg-neon-violet transition-all duration-300 group-hover:w-full"></span>
          </a>
        </li>
      ))}
    </ul>

    <div class="w-px h-4 bg-zinc-200 mx-2"></div>

    <!-- Social Links -->
    <ul class="flex items-center gap-4">
      {socialItems.map((item) => (
        <li>
          <a
            href={item.href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={item.label}
            class="text-text-muted hover:text-text-main hover:scale-110 transition-all duration-200 block"
          >
            <item.icon class="w-4 h-4" />
          </a>
        </li>
      ))}
    </ul>

  </nav>
</header>
