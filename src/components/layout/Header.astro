---
import { Home, PenTool, User, Github, Folder } from 'lucide-astro';
import Discord from '../icons/Discord.astro';

const navItems = [
  { label: 'ホーム', href: '/', icon: Home },
  { label: 'ブログ', href: '/blog', icon: PenTool },
  { label: 'プロジェクト', href: '/projects', icon: Folder },
  { label: 'プロフィール', href: '/about', icon: User },
];

const socialItems = [
  { label: 'GitHub', href: 'https://github.com', icon: Github },
  { label: 'Discord', href: 'https://discord.gg/nqsegJHjBb', icon: Discord },
];
---

<header class="fixed top-4 md:top-6 left-1/2 -translate-x-1/2 z-50 w-full max-w-2xl px-4">
  <nav class="glass-deep rounded-full px-5 py-2.5 md:px-6 md:py-3 flex items-center justify-between transition-all duration-300 hover:glow-box ring-1 ring-white/60 shadow-lg shadow-zinc-200/20 whitespace-nowrap">

    <!-- Internal Links -->
    <ul class="flex items-center gap-1 md:gap-6">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="flex items-center gap-2 p-2 md:p-0 rounded-full hover:bg-white/50 md:hover:bg-transparent transition-all group relative"
          >
            <item.icon class="w-5 h-5 md:w-4 md:h-4 text-text-muted group-hover:text-text-main transition-colors" />
            <span class="text-sm font-medium text-text-muted group-hover:text-text-main transition-colors hidden md:block">{item.label}</span>
            <span class="absolute -bottom-1 left-0 w-0 h-px bg-neon-violet transition-all duration-300 group-hover:w-full hidden md:block"></span>
          </a>
        </li>
      ))}
    </ul>

    <div class="w-px h-5 bg-zinc-300/50 mx-2 hidden md:block"></div>

    <!-- Social Links -->
    <ul class="flex items-center gap-3">
      {socialItems.map((item) => (
        <li>
          <a
            href={item.href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={item.label}
            class="p-2 rounded-full hover:bg-white/80 text-text-muted hover:text-text-main hover:scale-110 hover:shadow-sm transition-all duration-200 block border border-transparent hover:border-white/60"
          >
            <item.icon class="w-4 h-4" />
          </a>
        </li>
      ))}
    </ul>

  </nav>
</header>
