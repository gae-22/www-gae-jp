---
import BentoItem from './BentoItem.astro';
import TechStack from './TechStack.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { ArrowUpRight, Music, Github} from 'lucide-astro';

// Fetch latest featured post
const posts = await getCollection('blog', ({ data }) => {
	return import.meta.env.PROD ? !data.draft && data.featured : true;
});
const latestPost = posts.sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf())[0];
---

<section class="max-w-6xl mx-auto px-4 pb-32">
    <h2 class="text-3xl font-display font-thin mb-12 text-center">
        Selected <span class="text-white/30">Works</span>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 grid-rows-auto lg:grid-rows-2 gap-4 h-auto lg:h-150">

        <!-- Item 1: Featured Post (Large) -->
        <BentoItem class="col-span-1 md:col-span-2 lg:col-span-2 row-span-1 lg:row-span-2 group/post" title="Latest Writing">
            {latestPost ? (
                <a href={`/blog/${latestPost.slug}`} class="block w-full h-full relative">
                     {latestPost.data.cover && (
                        <Image
                            src={latestPost.data.cover}
                            alt={latestPost.data.coverAlt || ""}
                            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover/post:scale-110 opacity-60 group-hover/post:opacity-40"
                        />
                     )}
                     <div class="absolute bottom-0 left-0 w-full p-8 bg-linear-to-t from-deep via-deep/80 to-transparent">
                        <div class="text-neon-cyan text-xs font-mono mb-2">
                             {latestPost.data.publishedAt.toLocaleDateString()}
                        </div>
                        <h3 class="text-3xl font-display font-bold leading-tight mb-2 group-hover/post:text-neon-violet transition-colors">
                            {latestPost.data.title}
                        </h3>
                        <p class="text-sm text-text-muted line-clamp-2">
                            {latestPost.data.description}
                        </p>
                     </div>
                     <div class="absolute top-6 right-6 w-10 h-10 rounded-full bg-white/10 flex items-center justify-center backdrop-blur-md opacity-0 group-hover/post:opacity-100 transition-opacity">
                        <ArrowUpRight class="w-5 h-5 text-white" />
                     </div>
                </a>
            ) : (
                <div class="w-full h-full flex items-center justify-center text-text-muted">
                    <p>No posts available yet</p>
                </div>
            )}
        </BentoItem>

        <!-- Item 2: Tech Stack (Medium Wide) -->
        <BentoItem class="col-span-1 md:col-span-2 lg:col-span-2 row-span-1" title="Tech Stack">
            <TechStack />
        </BentoItem>

        <!-- Item 3: Socials (Small) -->
        <BentoItem class="col-span-1 md:col-span-1 lg:col-span-1 row-span-1 flex flex-col items-center justify-center gap-6" title="Connect">
            <div class="flex gap-6 mt-4">
                <a href="https://github.com/gae-22" target="_blank" class="p-4 rounded-full bg-white/5 hover:bg-white/10 hover:scale-110 transition-all text-white">
                    <Github class="w-6 h-6" />
                </a>
            </div>
        </BentoItem>

        <!-- Item 4: Music/Vibe (Small) -->
        <BentoItem class="col-span-1 md:col-span-1 lg:col-span-1 row-span-1 bg-linear-to-br from-purple-900/20 to-black" title="Vibe">
            <div class="w-full h-full flex flex-col items-center justify-center relative p-6">
                <!-- Music visualizer bars (CSS animation) -->
                <div class="flex items-end gap-1 h-12 mb-4">
                    <div class="w-1 bg-neon-violet animate-pulse h-full" style="animation-duration: 0.6s"></div>
                    <div class="w-1 bg-neon-cyan animate-pulse h-2/3" style="animation-duration: 0.8s"></div>
                    <div class="w-1 bg-white animate-pulse h-1/2" style="animation-duration: 0.4s"></div>
                    <div class="w-1 bg-neon-violet animate-pulse h-3/4" style="animation-duration: 0.7s"></div>
                </div>
                <div class="flex items-center gap-3 w-full">
                     <div class="w-10 h-10 rounded-md bg-white/10 flex items-center justify-center">
                        <Music class="w-5 h-5" />
                     </div>
                     <div class="flex-1 min-w-0">
                        <div class="text-xs font-semibold text-white truncate">Lo-Fi Coding Beats</div>
                        <div class="text-[10px] text-text-muted truncate">Spotify API</div>
                     </div>
                </div>
            </div>
        </BentoItem>

    </div>
</section>
