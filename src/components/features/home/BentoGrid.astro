---
import BentoItem from './BentoItem.astro';
import TechStack from './TechStack.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { ArrowUpRight, Github, MapPin } from 'lucide-astro';

// Fetch latest featured post
const posts = await getCollection('blog', ({ data }) => {
	return import.meta.env.PROD ? !data.draft && data.featured : true;
});
const latestPost = posts.sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf())[0];
---

<section class="max-w-6xl mx-auto px-4 pb-32">
    <h2 class="text-3xl font-display font-thin mb-12 text-center">
        制作 <span class="text-zinc-400">実績</span>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 grid-rows-auto lg:grid-rows-2 gap-4 h-auto lg:h-150">

        <!-- Item 1: Featured Post (Large) -->
        <BentoItem class="col-span-1 md:col-span-2 lg:col-span-2 row-span-1 lg:row-span-2 group/post" title="最新の記事">
            {latestPost ? (
                <a href={`/blog/${latestPost.slug}`} class="block w-full h-full relative">
                     {latestPost.data.cover && (
                        <Image
                            src={latestPost.data.cover}
                            alt={latestPost.data.coverAlt || ""}
                            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover/post:scale-110 opacity-60 group-hover/post:opacity-40"
                        />
                     )}
                     <div class="absolute bottom-0 left-0 w-full p-8 bg-linear-to-t from-deep via-deep/80 to-transparent">
                        <div class="text-neon-cyan text-xs font-mono mb-2">
                             {latestPost.data.publishedAt.toLocaleDateString()}
                        </div>
                        <h3 class="text-3xl font-display font-bold leading-tight mb-2 group-hover/post:text-neon-violet transition-colors">
                            {latestPost.data.title}
                        </h3>
                        <p class="text-sm text-text-muted line-clamp-2">
                            {latestPost.data.description}
                        </p>
                     </div>
                     <div class="absolute top-6 right-6 w-10 h-10 rounded-full bg-black/5 flex items-center justify-center backdrop-blur-md opacity-0 group-hover/post:opacity-100 transition-opacity">
                        <ArrowUpRight class="w-5 h-5 text-zinc-900" />
                     </div>
                </a>
            ) : (
                <div class="w-full h-full flex items-center justify-center text-text-muted">
                    <p>No posts available yet</p>
                </div>
            )}
        </BentoItem>

        <BentoItem class="col-span-1 md:col-span-2 lg:col-span-2 row-span-1" title="技術スタック">
            <TechStack />
        </BentoItem>

        <!-- Item 3: Socials (Small) -->
        <BentoItem class="col-span-1 md:col-span-1 lg:col-span-1 row-span-1 flex flex-col items-center justify-center gap-6" title="コンタクト">
            <div class="flex gap-6 mt-4">
                <a href="https://github.com/gae-22" target="_blank" class="p-4 rounded-full bg-black/5 hover:bg-black/10 hover:scale-110 transition-all text-zinc-900">
                    <Github class="w-6 h-6" />
                </a>
            </div>
        </BentoItem>

        <!-- Item 4: Location (Small) -->
        <BentoItem class="col-span-1 md:col-span-1 lg:col-span-1 row-span-1 bg-linear-to-br from-blue-50/50 to-zinc-100 group/location" title="拠点">
            <div class="h-full flex flex-col items-center justify-center relative overflow-hidden">
                <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1540959733332-eab4deabeeaf?q=80&w=1988&auto=format&fit=crop')] bg-cover bg-center opacity-20 group-hover/location:opacity-40 transition-opacity duration-500"></div>

                <div class="relative z-10 flex flex-col items-center gap-2">
                    <div class="p-3 bg-white/60 backdrop-blur-md rounded-full border border-white/40">
                        <MapPin class="w-6 h-6 text-neon-cyan" />
                    </div>
                    <div class="text-center">
                        <p class="font-bold text-text-main tracking-wider">東京</p>
                        <p class="text-xs text-text-muted">JPN</p>
                    </div>
                </div>
            </div>
        </BentoItem>

    </div>
</section>
