---
import BentoItem from './BentoItem.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { ArrowUpRight, Github, MapPin } from 'lucide-astro';
import Discord from '../../icons/Discord.astro';

// Fetch latest featured post
const posts = await getCollection('blog', ({ data }) => {
	return import.meta.env.PROD ? !data.draft && data.featured : true;
});
const latestPost = posts.sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf())[0];
---

<section class="max-w-6xl mx-auto px-4 pb-32">
    <h2 class="text-3xl font-display font-thin mb-12 text-center">
        制作 <span class="text-zinc-400">実績</span>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 grid-rows-auto lg:grid-rows-2 gap-3 h-auto min-h-160 lg:min-h-0 lg:h-128">

        <!-- Item 1: Featured Post (Large) -->
        <BentoItem class="col-span-1 md:col-span-2 lg:col-span-2 row-span-1 lg:row-span-2 group/post bg-linear-to-br from-violet-50/50 to-zinc-100" title="最新の記事">
            {latestPost ? (
                <a href={`/blog/${latestPost.slug}`} class="block w-full h-full relative overflow-hidden">
                    <!-- Default Book Background -->
                    <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1495446815901-a7297e633e8d?q=80&w=1788&auto=format&fit=crop')] bg-cover bg-center opacity-20 group-hover/post:opacity-40 transition-opacity duration-500"></div>

                     {latestPost.data.cover && (
                        <Image
                            src={latestPost.data.cover}
                            alt={latestPost.data.coverAlt || ""}
                            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover/post:scale-110 opacity-20 group-hover/post:opacity-40"
                        />
                     )}
                     <div class="absolute bottom-0 left-0 w-full p-6 bg-linear-to-t from-deep via-deep/80 to-transparent">
                        <div class="text-neon-cyan text-xs font-mono mb-2">
                             {latestPost.data.publishedAt.toLocaleDateString()}
                        </div>
                        <h3 class="text-2xl lg:text-3xl font-display font-bold leading-tight mb-2 group-hover/post:text-neon-violet transition-colors">
                            {latestPost.data.title}
                        </h3>
                        <p class="text-xs lg:text-sm text-text-muted line-clamp-2">
                            {latestPost.data.description}
                        </p>
                     </div>
                     <div class="absolute top-4 right-4 w-8 h-8 rounded-full bg-black/5 flex items-center justify-center backdrop-blur-md opacity-0 group-hover/post:opacity-100 transition-opacity">
                        <ArrowUpRight class="w-4 h-4 text-zinc-900" />
                     </div>
                </a>
            ) : (
                <div class="w-full h-full flex items-center justify-center text-text-muted">
                    <p>No posts available yet</p>
                </div>
            )}
        </BentoItem>

        <!-- Item 3a: GitHub (Small) -->
        <BentoItem class="col-span-1 md:col-span-1 lg:col-span-1 row-span-1 bg-linear-to-br from-purple-50/50 to-zinc-100 group/github">
             <div class="h-full w-full relative overflow-hidden flex items-center px-6">
                <!-- Background Image -->
                <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1618401471353-b98afee0b2eb?q=80&w=1788&auto=format&fit=crop')] bg-cover bg-center opacity-10 group-hover/github:opacity-30 transition-opacity duration-500"></div>

                <a href="https://github.com/gae-22" target="_blank" class="relative z-10 w-full flex items-center justify-between group-hover/github:translate-x-1 transition-transform">
                    <span class="text-xl font-bold font-display text-text-main">GitHub</span>
                    <div class="p-3 rounded-full bg-white/60 backdrop-blur-md group-hover/github:bg-white/80 transition-colors text-zinc-900 border border-white/40 shadow-sm">
                        <Github class="w-5 h-5" />
                    </div>
                </a>
            </div>
        </BentoItem>

        <!-- Item 3b: Discord (Small) -->
        <BentoItem class="col-span-1 md:col-span-1 lg:col-span-1 row-span-1 bg-linear-to-br from-indigo-50/50 to-zinc-100 group/discord">
             <div class="h-full w-full relative overflow-hidden flex items-center px-6">
                <!-- Background Image (Generated) -->
                <div class="absolute inset-0 bg-[url('/discord-bg.png')] bg-cover bg-center opacity-20 group-hover/discord:opacity-40 transition-opacity duration-500"></div>

                <a href="https://discord.gg/nqsegJHjBb" target="_blank" class="relative z-10 w-full flex items-center justify-between group-hover/discord:translate-x-1 transition-transform">
                    <span class="text-xl font-bold font-display text-text-main">Discord</span>
                    <div class="p-3 rounded-full bg-white/60 backdrop-blur-md group-hover/discord:bg-white/80 transition-colors text-indigo-600 border border-white/40 shadow-sm">
                        <Discord class="w-5 h-5" />
                    </div>
                </a>
            </div>
        </BentoItem>

        <!-- Item 4: Location (Small) -->
        <BentoItem class="col-span-1 md:col-span-3 lg:col-span-2 row-span-1 bg-linear-to-br from-blue-50/50 to-zinc-100 group/location">
            <div class="h-full w-full relative overflow-hidden flex items-center px-8">
                <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1540959733332-eab4deabeeaf?q=80&w=1988&auto=format&fit=crop')] bg-cover bg-center opacity-20 group-hover/location:opacity-40 transition-opacity duration-500"></div>

                <div class="relative z-10 w-full flex items-center justify-between pointer-events-none">
                     <div class="flex flex-col">
                        <span class="text-xs font-mono text-text-muted uppercase tracking-widest mb-1">Based in</span>
                        <div class="flex items-baseline gap-2">
                             <span class="text-2xl font-bold font-display text-text-main">Tokyo</span>
                             <span class="text-sm font-mono text-text-muted">JPN</span>
                        </div>
                    </div>
                    <div class="p-4 bg-white/60 backdrop-blur-md rounded-full border border-white/40 shadow-sm">
                        <MapPin class="w-6 h-6 text-neon-cyan" />
                    </div>
                </div>
            </div>
        </BentoItem>

    </div>
</section>
