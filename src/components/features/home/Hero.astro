---
import Clock from './Clock.astro';
import { ArrowDownRight, Layers, Code2 } from 'lucide-astro';
---

<section class="max-w-6xl mx-auto px-4 pt-24 pb-12 lg:pt-32 lg:pb-24 relative overflow-hidden">

    <!-- Background Gradient Blob (Subtle) -->
    <div class="absolute top-0 right-0 -z-10 w-1/2 h-full bg-[radial-gradient(circle_at_center,var(--color-neon-violet),transparent)] opacity-5 blur-[120px] pointer-events-none"></div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">

        <!-- Left: Introduction Typography -->
        <div class="flex flex-col items-start space-y-8 z-10">
            <!-- Status Badge -->
            <div class="glass px-4 py-1.5 rounded-full flex items-center gap-2.5 transition-transform hover:scale-105 cursor-default">
                <span class="relative flex h-2.5 w-2.5">
                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                    <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-green-500"></span>
                </span>
                <span class="text-xs font-mono font-medium text-zinc-600 tracking-wide uppercase">新規案件募集中</span>
            </div>

            <div class="space-y-4">
                <h1 class="text-5xl lg:text-7xl font-display font-bold leading-[1.1] text-text-main tracking-tight">
                    デジタルの<br />
                    <span class="text-transparent bg-clip-text bg-linear-to-r from-neon-violet to-neon-cyan">
                        現実を創る
                    </span>
                </h1>
                <p class="text-lg text-text-muted max-w-lg leading-relaxed text-balance">
                    東京を拠点とするWebアプリエンジニア <strong>gae</strong> です．<br>
                    デザインとコードの架け橋となり，便利なアプリケーションと直感的なインターフェースを作り上げます．
                </p>
            </div>

            <!-- CTA / Links (Optional, simple arrow link) -->
            <div class="flex items-center gap-4 pt-2">
                 <a href="#projects" class="group flex items-center gap-2 text-sm font-medium text-text-main border-b border-text-main/20 hover:border-text-main pb-0.5 transition-all">
                    制作実績を見る
                    <ArrowDownRight class="w-4 h-4 group-hover:translate-x-1 group-hover:translate-y-1 transition-transform" />
                 </a>
            </div>
        </div>

        <!-- Right: Visual Widget Grid -->
        <div class="relative w-full aspect-square md:aspect-auto md:h-105">
            <!-- Subtle background backing for the grid area -->
            <div class="absolute inset-0 bg-linear-to-tr from-violet-100/40 to-cyan-100/40 rounded-4xl blur-2xl opacity-60"></div>

            <div class="relative w-full h-full grid grid-cols-2 grid-rows-2 gap-4">

                <!-- Card 1: Main Profile Identity -->
                <div class="col-span-1 row-span-2 glass rounded-4xl p-6 flex flex-col justify-between group hover:border-neon-violet/30 transition-colors duration-500">
                    <div class="relative w-16 h-16 rounded-2xl bg-white p-1 shadow-sm overflow-hidden mb-4">
                         <img src="/gae.svg" alt="gae branding" class="w-full h-full object-contain" />
                    </div>
                    <div>
                        <div class="flex items-center gap-2 mb-2">
                            <span class="px-2 py-0.5 rounded-md bg-zinc-100 text-[10px] font-mono font-bold text-zinc-500 border border-zinc-200">DEV</span>
                        </div>
                        <h2 class="font-display font-bold text-2xl text-text-main leading-none mb-1">gae</h2>
                        <p class="text-xs text-text-muted">Frontend &<br>UI/UX Design</p>
                    </div>
                </div>

                <!-- Card 2: Clock Component (Re-using existing component) -->
                <div class="col-span-1 row-span-1">
                    <Clock />
                </div>

                <!-- Card 3: Tech/interest snippet -->
                <div class="col-span-1 row-span-1 glass rounded-4xl p-5 flex flex-col justify-center gap-3 hover:bg-white/60 transition-colors duration-300">
                     <span class="text-xs font-mono text-zinc-400 uppercase tracking-wider">Focus</span>
                     <div class="flex items-center justify-between text-text-main">
                        <div class="flex flex-col items-center gap-1 group/icon">
                             <div class="p-2 rounded-xl bg-white/50 border border-white/60 shadow-xs group-hover/icon:scale-110 transition-transform">
                                <Code2 class="w-5 h-5 text-neon-cyan" />
                             </div>
                             <span class="text-[10px] text-zinc-500 opacity-0 group-hover/icon:opacity-100 transition-opacity">Code</span>
                        </div>
                         <div class="w-8 h-px bg-zinc-300/50"></div>
                        <div class="flex flex-col items-center gap-1 group/icon">
                            <div class="p-2 rounded-xl bg-white/50 border border-white/60 shadow-xs group-hover/icon:scale-110 transition-transform">
                                <Layers class="w-5 h-5 text-neon-violet" />
                            </div>
                            <span class="text-[10px] text-zinc-500 opacity-0 group-hover/icon:opacity-100 transition-opacity">UI</span>
                        </div>
                     </div>
                </div>

            </div>
        </div>

    </div>
</section>
