---
import { Image } from 'astro:assets';
import Clock from './Clock.astro';
import { MousePointer2, MapPin } from 'lucide-astro';

// Placeholder for profile image (using a colorful div if no image)
// Real implementation would import a local image
---

<section class="relative min-h-[80vh] w-full flex items-center justify-center overflow-visible py-20">

    <!-- Background Elements -->
    <div class="absolute inset-0 z-0 flex items-center justify-center opacity-30 pointer-events-none">
        <div class="w-200 h-200 bg-[radial-gradient(closest-side,var(--color-neon-violet),transparent)] opacity-20 blur-3xl animate-pulse" style="animation-duration: 4s;"></div>
    </div>

    <!-- The Scattered Deck -->
    <div class="relative w-full max-w-5xl h-150 md:h-125">

        <!-- Card 1: Profile (Large, Tilted Left) -->
        <div class="absolute top-10 left-4 md:left-20 w-72 md:w-80 aspect-4/5 glass rounded-3xl p-6 -rotate-6 hover:rotate-0 transition-transform duration-500 hover:z-50 hover:scale-105 cursor-default border-t border-white/40 shadow-2xl">
            <div class="w-full h-full flex flex-col justify-between">
                <div class="w-20 h-20 rounded-full bg-linear-to-br from-neon-cyan to-neon-violet mb-4 flex items-center justify-center text-3xl font-bold text-white">
                    g
                </div>
                <div>
                    <h2 class="text-3xl font-display font-bold text-text-main leading-none mb-1">gae</h2>
                    <p class="text-text-muted text-sm">Frontend Engineer &<br>UI Designer</p>
                </div>
            </div>
        </div>

        <!-- Card 2: Status (Small, Top Right) -->
        <div class="absolute top-0 right-8 md:right-32 w-48 aspect-video glass rounded-full flex items-center justify-center gap-3 rotate-3 hover:rotate-0 transition-transform duration-300 hover:z-50 border border-green-500/20 bg-green-100/50">
            <span class="relative flex h-3 w-3">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
            </span>
            <span class="text-sm font-medium text-green-600">お仕事募集中</span>
        </div>

        <!-- Card 3: Clock (Center-ish) -->
        <div class="absolute bottom-20 right-10 md:right-40 w-56 aspect-square rotate-6 hover:rotate-0 transition-transform duration-500 hover:z-50 hover:scale-105">
            <Clock />
        </div>

        <!-- Card 4: Greeting/Intro (Bottom Left) -->
            <div class="flex items-start gap-3 mb-3">
                <MousePointer2 class="w-5 h-5 text-neon-cyan" />
                <span class="text-xs font-bold text-neon-cyan uppercase tracking-widest mt-1">Introduction</span>
            </div>

            <div class="flex flex-col gap-2">
                <div class="flex items-center gap-3">
                    <span class="w-2 h-2 rounded-full bg-neon-violet"></span>
                    <span class="text-lg md:text-xl font-medium text-text-main">Engineering</span>
                </div>
                <div class="flex items-center gap-3">
                    <span class="w-2 h-2 rounded-full bg-neon-cyan"></span>
                     <span class="text-lg md:text-xl font-medium text-text-main">Design</span>
                </div>
                 <div class="flex items-center gap-3">
                    <span class="w-2 h-2 rounded-full bg-text-main"></span>
                     <span class="text-lg md:text-xl font-medium text-text-main">Experience</span>
                </div>
            </div>

            <div class="mt-6 flex items-center gap-2 text-xs text-text-muted">
                <MapPin class="w-3 h-3" />
                <span>Tokyo</span>
            </div>

    </div>
</section>
