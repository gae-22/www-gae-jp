---
import Clock from './Clock.astro';
import { ArrowDownRight, Layers, Code2 } from 'lucide-astro';
---

<section class="max-w-7xl mx-auto px-4 pt-28 pb-10 lg:pt-32 lg:pb-24 relative overflow-hidden">

    <!-- Background Gradient Blob (Subtle & Floating) -->
    <div class="absolute -top-20 -right-20 -z-10 w-3/4 h-3/4 bg-[radial-gradient(circle_at_center,var(--color-neon-violet),transparent)] opacity-10 blur-[120px] pointer-events-none animate-float"></div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-8 items-center">

        <!-- Left: Introduction Typography -->
        <div class="lg:col-span-6 flex flex-col items-start space-y-8 z-10">
            <!-- Status Badge -->
            <div class="glass px-5 py-2 rounded-full flex items-center gap-3 transition-transform hover:scale-105 cursor-default border-white/80">
                <span class="relative flex h-2.5 w-2.5">
                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                    <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-green-500"></span>
                </span>
                <span class="text-xs font-mono font-medium text-text-muted tracking-wide uppercase">Available for work</span>
            </div>

            <div class="space-y-6 relative">
                 <!-- Decorative line -->
                 <div class="absolute -left-6 top-2 w-1 h-32 bg-linear-to-b from-neon-violet/20 to-transparent hidden lg:block rounded-full"></div>

                <h1 class="text-5xl sm:text-6xl lg:text-8xl font-display font-bold leading-none text-text-main tracking-tight">
                    デジタルの<br />
                    <span class="text-transparent bg-clip-text bg-linear-to-r from-neon-violet via-fuchsia-500 to-neon-cyan pb-2 inline-block glow-text">
                        現実を創る
                    </span>
                </h1>
                <p class="text-lg text-text-muted max-w-lg leading-relaxed text-balance">
                    東京を拠点とするWebアプリエンジニア <strong>gae</strong> です。<br>
                    <span class="inline-block mt-2">
                        デザインとエンジニアリングの境界を溶かし、<br>
                        無意識に心地よい体験を実装します。
                    </span>
                </p>
            </div>

            <!-- CTA / Links -->
            <div class="flex items-center gap-6 pt-4">
                 <a href="#projects" class="group relative px-6 py-3 bg-text-main text-white rounded-full font-medium overflow-hidden hover:shadow-lg hover:shadow-neon-violet/20 transition-all duration-300">
                    <span class="relative z-10 flex items-center gap-2">
                        View Projects
                        <ArrowDownRight class="w-4 h-4 group-hover:translate-x-1 group-hover:translate-y-1 transition-transform" />
                    </span>
                    <div class="absolute inset-0 bg-linear-to-r from-neon-violet to-neon-cyan opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                 </a>
                 <a href="/about" class="text-sm font-medium text-text-muted hover:text-text-main transition-colors border-b border-transparent hover:border-text-main">
                    More about me
                 </a>
            </div>
        </div>

        <!-- Right: Scattered Grid Widget area -->
        <div class="lg:col-span-6 relative w-full h-125 hidden lg:block perspective-1000">
            <!-- Subtle backing -->
            <div class="absolute inset-0 bg-linear-to-tr from-violet-100/30 to-cyan-100/30 rounded-[3rem] blur-3xl opacity-40 transform rotate-3"></div>

            <!-- Card 1: Main Profile (Tilted Left) -->
            <div class="absolute top-10 left-10 w-64 glass rounded-4xl p-6 flex flex-col gap-4 hover-tilt hover:rotate-2 hover:z-20 transition-all duration-500 animate-float" style="animation-delay: 0s;">
                <div class="relative w-16 h-16 rounded-2xl bg-white p-1 shadow-sm overflow-hidden">
                     <img src="/gae.svg" alt="gae branding" class="w-full h-full object-contain" />
                </div>
                <div>
                    <h2 class="font-display font-bold text-2xl text-text-main leading-none mb-1">gae</h2>
                    <p class="text-xs text-text-muted">Software Engineer<br>& Web Developer</p>
                </div>
                <div class="flex gap-2 mt-2">
                    <span class="px-2 py-0.5 rounded-md bg-zinc-100/50 text-[10px] font-mono font-bold text-zinc-500 border border-zinc-200/50">TypeScript</span>
                    <span class="px-2 py-0.5 rounded-md bg-zinc-100/50 text-[10px] font-mono font-bold text-zinc-500 border border-zinc-200/50">React</span>
                </div>
            </div>

            <!-- Card 2: Clock (Tilted Right, Floating) -->
            <div class="absolute top-0 right-10 w-48 hover-tilt hover:rotate-3 hover:z-20 transition-all duration-500 animate-float" style="animation-delay: 1.5s;">
                <Clock />
            </div>

             <!-- Card 3: Focus/Stack (Bottom Center) -->
            <div class="absolute bottom-10 right-20 w-56 glass rounded-4xl p-5 flex flex-col justify-center gap-4 hover-tilt hover:rotate-1 hover:z-20 transition-all duration-500 animate-float" style="animation-delay: 2.5s;">
                 <div class="flex items-center justify-between mb-1">
                    <span class="text-xs font-mono text-zinc-400 uppercase tracking-wider">Core Focus</span>
                </div>
                 <div class="flex items-center justify-around text-text-main">
                    <div class="flex flex-col items-center gap-2 group/icon">
                         <div class="p-3 rounded-2xl bg-white/50 border border-white/60 shadow-xs group-hover/icon:scale-110 group-hover/icon:rotate-3 transition-transform duration-300">
                            <Code2 class="w-6 h-6 text-neon-cyan" />
                         </div>
                         <span class="text-[10px] uppercase font-bold text-zinc-500">Eng</span>
                    </div>
                     <div class="w-px h-10 bg-zinc-300/30"></div>
                    <div class="flex flex-col items-center gap-2 group/icon">
                        <div class="p-3 rounded-2xl bg-white/50 border border-white/60 shadow-xs group-hover/icon:scale-110 group-hover/icon:-rotate-3 transition-transform duration-300">
                            <Layers class="w-6 h-6 text-neon-violet" />
                        </div>
                        <span class="text-[10px] uppercase font-bold text-zinc-500">UI/UX</span>
                    </div>
                 </div>
            </div>

            <!-- Decorative Elements -->
            <div class="absolute top-1/2 left-1/3 w-4 h-4 rounded-full bg-neon-cyan/20 blur-sm animate-pulse"></div>
            <div class="absolute bottom-1/3 right-1/4 w-6 h-6 rounded-full bg-neon-violet/20 blur-md animate-pulse delay-700"></div>

        </div>

        <!-- Mobile Fallback for visuals (simplified grid) -->
        <div class="lg:hidden w-full grid grid-cols-2 gap-4">
             <div class="col-span-2 glass rounded-3xl p-6 flex items-center gap-4">
                 <div class="w-12 h-12 rounded-xl bg-white p-1 shadow-sm overflow-hidden">
                     <img src="/gae.svg" alt="gae branding" class="w-full h-full object-contain" />
                 </div>
                 <div>
                    <h2 class="font-display font-bold text-xl text-text-main">gae</h2>
                    <p class="text-xs text-text-muted">Creative Developer</p>
                </div>
             </div>
             <div class="col-span-1">
                 <Clock />
             </div>
             <div class="col-span-1 glass rounded-3xl p-4 flex items-center justify-center">
                 <Code2 class="w-6 h-6 text-neon-cyan mr-2" />
                 <Layers class="w-6 h-6 text-neon-violet" />
             </div>
        </div>

    </div>
</section>
