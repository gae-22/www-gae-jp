---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';

interface Props {
  post: CollectionEntry<'blog'>;
  variant?: 'featured' | 'basic';
  class?: string;
}

const { post, variant = 'basic', class: className } = Astro.props;

const isFeatured = variant === 'featured';
---

<a href={`/blog/${post.slug}`} class:list={["group relative block h-full", className]}>
  <article class:list={[
    "glass-card rounded-3xl overflow-hidden h-full flex flex-col",
    isFeatured ? "bg-white/80" : "bg-white/60"
  ]}>

    <!-- Cover Image Wrapper -->
    <div class:list={[
      "w-full overflow-hidden relative",
      isFeatured ? "aspect-21/9" : "aspect-video"
    ]}>
        {post.data.cover ? (
            <Image
                src={post.data.cover}
                alt={post.data.coverAlt || post.data.title}
                class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-105"
            />
        ) : (
             <div class="w-full h-full bg-zinc-100 flex items-center justify-center relative overflow-hidden">
                <div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(#000 1px, transparent 1px); background-size: 20px 20px;"></div>
                <span class="font-display font-bold text-4xl text-zinc-900/5">gae</span>
            </div>
        )}

        {/* Subtle Gradient Overlay for text readability if needed, though most text is below */}
        {post.data.tags.length > 0 && (
            <div class="absolute top-4 left-4 flex gap-2">
                {post.data.tags.slice(0, isFeatured ? 3 : 1).map(tag => (
                   <span class="px-2.5 py-1 rounded-md bg-white/90 backdrop-blur-md shadow-sm border border-white/50 text-[10px] font-mono font-bold text-ink-muted uppercase tracking-wider">
                        {tag}
                    </span>
                ))}
            </div>
        )}
    </div>

    <!-- Content -->
    <div class:list={["flex-1 flex flex-col", isFeatured ? "p-8 lg:p-10" : "p-6 lg:p-8"]}>
      <div class="flex items-center gap-3 text-[10px] font-mono text-ink-muted uppercase tracking-widest mb-4">
        <time datetime={post.data.publishedAt.toISOString()}>
            {post.data.publishedAt.toLocaleDateString('ja-JP', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
            })}
        </time>
      </div>

      <h3 class:list={[
        "font-display font-medium mb-3 text-ink group-hover:text-accent-indigo transition-colors duration-300 leading-[1.2]",
        isFeatured ? "text-2xl lg:text-3xl" : "text-xl lg:text-2xl"
      ]}>
        {post.data.title}
      </h3>

      <p class:list={[
        "text-ink-muted leading-relaxed mb-6 flex-1 text-balance",
        isFeatured ? "text-base line-clamp-3" : "text-sm line-clamp-2"
      ]}>
        {post.data.description}
      </p>

      <div class="flex items-center gap-2 text-xs font-bold text-ink group-hover:text-accent-indigo transition-colors duration-300 mt-auto">
        <span class="relative">
            Read Article
            <span class="absolute -bottom-1 left-0 w-full h-px bg-current transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></span>
        </span>
        <span class="transform -translate-x-1 opacity-0 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-300">
            â†’
        </span>
      </div>
    </div>
  </article>
</a>
