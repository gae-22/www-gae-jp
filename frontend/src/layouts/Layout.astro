---
import '~/styles/global.css';

// Font Imports
import '@fontsource/outfit/200.css';
import '@fontsource/outfit/400.css';
import '@fontsource/outfit/700.css';
import '@fontsource/inter/400.css';
import '@fontsource/inter/600.css';
import '@fontsource/jetbrains-mono/400.css';
import '@fontsource/zen-kaku-gothic-new/400.css';
import '@fontsource/zen-kaku-gothic-new/500.css';
import '@fontsource/zen-kaku-gothic-new/700.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "洗練されたモダンなポートフォリオ。" } = Astro.props;
---

<!doctype html>
<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/gae.svg" />
		<!-- Fallback / standard favicon -->
		<link rel="icon" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
    <body class="min-h-screen relative overflow-x-hidden bg-paper text-ink selection:bg-accent-indigo selection:text-white">
        <!-- Global Noise Texture -->
        <div class="fixed inset-0 z-50 pointer-events-none opacity-[0.03] mix-blend-multiply bg-[url('/noise.webp')]"></div>

        <!-- Background Ambient Blobs -->
        <div class="fixed inset-0 z-[-1] overflow-hidden pointer-events-none">
            <div class="absolute top-[-10%] left-[-10%] w-[60%] h-[60%] rounded-full bg-violet-200/30 blur-[120px] mix-blend-multiply animate-blob"></div>
            <div class="absolute top-[-10%] right-[-10%] w-[60%] h-[60%] rounded-full bg-cyan-200/30 blur-[120px] mix-blend-multiply animate-blob animation-delay-2000"></div>
            <div class="absolute -bottom-32 left-20 w-[60%] h-[60%] rounded-full bg-fuchsia-200/30 blur-[120px] mix-blend-multiply animate-blob animation-delay-4000"></div>
        </div>

        <!-- Contents are here -->
		<slot />
	</body>
</html>
