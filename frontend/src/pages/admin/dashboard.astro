---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/layout/Header.astro';

// セッションチェック（簡易版 - 本番環境ではサーバーサイドで検証）
const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:4000';

// ここではクライアントサイドで認証チェックを行います
---

<Layout title="Admin Dashboard | gae">
  <Header />

  <main class="min-h-screen bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 pt-24 pb-20">
      <div class="mb-8 flex justify-between items-center">
        <h1 class="text-4xl font-bold text-slate-900">管理ダッシュボード</h1>
        <button
          id="logout-btn"
          class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition"
        >
          ログアウト
        </button>
      </div>

      <div id="auth-check" class="text-center py-20">
        <p class="text-slate-600">認証確認中...</p>
      </div>

      <div id="dashboard-content" class="hidden space-y-8">
        <!-- プロフィール編集 -->
        <section class="bg-white rounded-xl shadow-lg p-8 border border-slate-200">
          <h2 class="text-2xl font-bold text-slate-900 mb-6">プロフィール編集</h2>
          <form id="profile-form" class="grid grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">名前</label>
              <input
                type="text"
                name="name"
                id="profile-name"
                class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">経験年数</label>
              <input
                type="number"
                name="experienceYears"
                id="profile-experience"
                class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">プロジェクト数</label>
              <input
                type="number"
                name="projectCount"
                id="profile-projects"
                class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500"
              />
            </div>
            <div class="col-span-2">
              <label class="block text-sm font-medium text-slate-700 mb-2">役割 (カンマ区切り)</label>
              <input
                type="text"
                name="roles"
                id="profile-roles"
                placeholder="Network, Software, Infrastructure"
                class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500"
              />
            </div>
            <div class="col-span-2">
              <button
                type="submit"
                class="px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition shadow-lg"
              >
                プロフィールを更新
              </button>
            </div>
          </form>
        </section>

        <!-- タイムライン管理 -->
        <section class="bg-white rounded-xl shadow-lg p-8 border border-slate-200">
          <h2 class="text-2xl font-bold text-slate-900 mb-6">タイムライン管理</h2>

          <div class="mb-6">
            <h3 class="text-lg font-semibold mb-4">新規追加</h3>
            <form id="timeline-form" class="space-y-4">
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-slate-700 mb-2">開始日</label>
                  <input type="text" name="startDate" placeholder="2025-04" class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500"/>
                </div>
                <div>
                  <label class="block text-sm font-medium text-slate-700 mb-2">終了日（任意）</label>
                  <input type="text" name="endDate" placeholder="現在" class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500"/>
                </div>
              </div>
              <div>
                <label class="block text-sm font-medium text-slate-700 mb-2">タイトル</label>
                <input type="text" name="title" placeholder="東京大学大学院" class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500"/>
              </div>
              <div>
                <label class="block text-sm font-medium text-slate-700 mb-2">組織（任意）</label>
                <input type="text" name="organization" placeholder="情報理工学系研究科" class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500"/>
              </div>
              <div>
                <label class="block text-sm font-medium text-slate-700 mb-2">説明</label>
                <textarea name="description" rows="3" class="w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500"></textarea>
              </div>
              <button type="submit" class="px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
                タイムライン追加
              </button>
            </form>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-4">既存のタイムライン</h3>
            <div id="timeline-list" class="space-y-2"></div>
          </div>
        </section>

        <!-- スキル管理 -->
        <section class="bg-white rounded-xl shadow-lg p-8 border border-slate-200">
          <h2 class="text-2xl font-bold text-slate-900 mb-6">スキル管理</h2>

          <form id="skill-form" class="mb-6 flex gap-4">
            <input type="text" name="name" placeholder="スキル名" class="flex-1 px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500"/>
            <select name="category" class="px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500">
              <option value="languages">言語</option>
              <option value="frameworks">フレームワーク</option>
              <option value="others">その他</option>
            </select>
            <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">追加</button>
          </form>

          <div id="skills-list" class="space-y-2"></div>
        </section>

        <!-- ギア管理 -->
        <section class="bg-white rounded-xl shadow-lg p-8 border border-slate-200">
          <h2 class="text-2xl font-bold text-slate-900 mb-6">ギア管理</h2>

          <form id="gear-form" class="mb-6 flex gap-4">
            <input type="text" name="name" placeholder="ギア名" class="flex-1 px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-indigo-500"/>
            <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">追加</button>
          </form>

          <div id="gear-list" class="space-y-2"></div>
        </section>
      </div>
    </div>
  </main>
</Layout>

<script>
  const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:4000';

  // ログアウト
  document.getElementById('logout-btn')?.addEventListener('click', async () => {
    try {
      await fetch(`${API_URL}/api/auth/logout`, {
        method: 'POST',
        credentials: 'include'
      });
    } catch (error) {
      console.error('Logout error:', error);
    }
    window.location.href = '/admin/login';
  });

  // データロード
  async function loadData() {
    try {
      // プロフィール
      const profileRes = await fetch(`${API_URL}/api/profile`, { credentials: 'include' });
      if (profileRes.ok) {
        const profile = await profileRes.json();
        (document.getElementById('profile-name') as HTMLInputElement).value = profile.name || '';
        (document.getElementById('profile-experience') as HTMLInputElement).value = profile.experienceYears?.toString() || '';
        (document.getElementById('profile-projects') as HTMLInputElement).value = profile.projectCount?.toString() || '';
        (document.getElementById('profile-roles') as HTMLInputElement).value = profile.roles?.join(', ') || '';
      }

      // タイムライン
      const timelineRes = await fetch(`${API_URL}/api/timeline`, { credentials: 'include' });
      if (timelineRes.ok) {
        const timeline = await timelineRes.json();
        const list = document.getElementById('timeline-list');
        if (list) {
          list.innerHTML = timeline.map((item: any) => `
            <div class="flex justify-between items-center p-4 bg-slate-50 rounded-lg">
              <div>
                <p class="font-semibold">${item.title}</p>
                <p class="text-sm text-slate-600">${item.startDate}${item.endDate ? ` - ${item.endDate}` : ''}</p>
              </div>
              <button onclick="deleteTimeline(${item.id})" class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 text-sm">
                削除
              </button>
            </div>
          `).join('');
        }
      }

      // スキル
      const skillsRes = await fetch(`${API_URL}/api/skills`, { credentials: 'include' });
      if (skillsRes.ok) {
        const skills = await skillsRes.json();
        const list = document.getElementById('skills-list');
        if (list) {
          list.innerHTML = skills.map((item: any) => `
            <div class="flex justify-between items-center p-3 bg-slate-50 rounded-lg">
              <span>${item.name} <span class="text-sm text-slate-500">(${item.category})</span></span>
              <button onclick="deleteSkill(${item.id})" class="px-3 py-1 bg-red-500 text-white rounded text-sm">削除</button>
            </div>
          `).join('');
        }
      }

      // ギア
      const gearRes = await fetch(`${API_URL}/api/gear`, { credentials: 'include' });
      if (gearRes.ok) {
        const gear = await gearRes.json();
        const list = document.getElementById('gear-list');
        if (list) {
          list.innerHTML = gear.map((item: any) => `
            <div class="flex justify-between items-center p-3 bg-slate-50 rounded-lg">
              <span>${item.name}</span>
              <button onclick="deleteGear(${item.id})" class="px-3 py-1 bg-red-500 text-white rounded text-sm">削除</button>
            </div>
          `).join('');
        }
      }

      document.getElementById('auth-check')?.classList.add('hidden');
      document.getElementById('dashboard-content')?.classList.remove('hidden');
    } catch (error) {
      console.error('Data load error:', error);
      window.location.href = '/admin/login?error=セッションが無効です';
    }
  }

  // フォーム送信ハンドラ
  document.getElementById('profile-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const form = e.target as HTMLFormElement;
    const formData = new FormData(form);

    try {
      const response = await fetch(`${API_URL}/api/profile`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({
          name: formData.get('name'),
          experienceYears: formData.get('experienceYears'),
          projectCount: formData.get('projectCount'),
          roles: (formData.get('roles') as string).split(',').map(r => r.trim())
        })
      });

      if (response.ok) alert('プロフィールを更新しました');
      else alert('更新に失敗しました');
    } catch (error) {
      alert('エラーが発生しました');
    }
  });

  document.getElementById('timeline-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const form = e.target as HTMLFormElement;
    const formData = new FormData(form);

    try {
      const response = await fetch(`${API_URL}/api/timeline`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify(Object.fromEntries(formData))
      });

      if (response.ok) {
        alert('タイムラインを追加しました');
        form.reset();
        loadData();
      }
    } catch (error) {
      alert('エラーが発生しました');
    }
  });

  document.getElementById('skill-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const form = e.target as HTMLFormElement;
    const formData = new FormData(form);

    try {
      const response = await fetch(`${API_URL}/api/skills`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify(Object.fromEntries(formData))
      });

      if (response.ok) {
        form.reset();
        loadData();
      }
    } catch (error) {
      alert('エラーが発生しました');
    }
  });

  document.getElementById('gear-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const form = e.target as HTMLFormElement;
    const formData = new FormData(form);

    try {
      const response = await fetch(`${API_URL}/api/gear`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify(Object.fromEntries(formData))
      });

      if (response.ok) {
        form.reset();
        loadData();
      }
    } catch (error) {
      alert('エラーが発生しました');
    }
  });

  // 削除関数をグローバルに
  (window as any).deleteTimeline = async (id: number) => {
    if (!confirm('削除しますか？')) return;
    try {
      await fetch(`${API_URL}/api/timeline/${id}`, { method: 'DELETE', credentials: 'include' });
      loadData();
    } catch (error) {
      alert('削除に失敗しました');
    }
  };

  (window as any).deleteSkill = async (id: number) => {
    if (!confirm('削除しますか？')) return;
    try {
      await fetch(`${API_URL}/api/skills/${id}`, { method: 'DELETE', credentials: 'include' });
      loadData();
    } catch (error) {
      alert('削除に失敗しました');
    }
  };

  (window as any).deleteGear = async (id: number) => {
    if (!confirm('削除しますか？')) return;
    try {
      await fetch(`${API_URL}/api/gear/${id}`, { method: 'DELETE', credentials: 'include' });
      loadData();
    } catch (error) {
      alert('削除に失敗しました');
    }
  };

  // 初期ロード
  loadData();
</script>
