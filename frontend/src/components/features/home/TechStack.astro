---
import { Cpu, Globe, Code, Layers } from 'lucide-astro';
// In a real app, I would import specific brand SVG icons.
// Using Lucide icons as placeholders for generic "Tech" concepts or specific SVGs if available.
// For "No Emojis" rule, strictly SVGs.
---

<div class="w-full h-full flex items-center relative overflow-hidden bg-zinc-50/50">
  <div class="absolute inset-y-0 left-0 w-16 bg-linear-to-r from-white to-transparent z-10"></div>
  <div class="absolute inset-y-0 right-0 w-16 bg-linear-to-l from-white to-transparent z-10"></div>

  <div class="flex gap-8 animate-scroll whitespace-nowrap px-4">
    {/* Doubled for seamless loop */}
    {[1, 2].map(() => (
      <>
        <div class="flex flex-col items-center gap-2 group/icon">
          <div class="w-12 h-12 rounded-xl glass flex items-center justify-center group-hover/icon:border-accent-indigo transition-colors">
            <Globe class="w-6 h-6 text-zinc-600 group-hover/icon:text-accent-indigo transition-colors" />
          </div>
          <span class="text-[10px] text-ink-muted uppercase font-medium tracking-wide">Astro</span>
        </div>

        <div class="flex flex-col items-center gap-2 group/icon">
           <div class="w-12 h-12 rounded-xl glass flex items-center justify-center group-hover/icon:border-accent-teal transition-colors">
            <Layers class="w-6 h-6 text-zinc-600 group-hover/icon:text-accent-teal transition-colors" />
          </div>
          <span class="text-[10px] text-ink-muted uppercase font-medium tracking-wide">Tailwind</span>
        </div>

        <div class="flex flex-col items-center gap-2 group/icon">
           <div class="w-12 h-12 rounded-xl glass flex items-center justify-center group-hover/icon:border-blue-500 transition-colors">
            <Code class="w-6 h-6 text-zinc-600 group-hover/icon:text-blue-500 transition-colors" />
          </div>
          <span class="text-[10px] text-ink-muted uppercase font-medium tracking-wide">React</span>
        </div>

        <div class="flex flex-col items-center gap-2 group/icon">
           <div class="w-12 h-12 rounded-xl glass flex items-center justify-center group-hover/icon:border-emerald-500 transition-colors">
            <Cpu class="w-6 h-6 text-zinc-600 group-hover/icon:text-emerald-500 transition-colors" />
          </div>
          <span class="text-[10px] text-ink-muted uppercase font-medium tracking-wide">Node.js</span>
        </div>
      </>
    ))}
  </div>
</div>

<style>
  @keyframes scroll {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }
  .animate-scroll {
    animation: scroll 20s linear infinite;
  }
</style>
