<div class="glass-card p-6 rounded-3xl flex flex-col items-center justify-center h-full w-full relative overflow-hidden group">
  <div class="absolute inset-0 bg-accent-indigo/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

  <time class="clock-display text-4xl font-display font-medium tabular-nums tracking-wider text-ink relative z-10">
    --:--
  </time>
  <span class="text-xs text-ink-muted mt-2 uppercase tracking-widest font-mono">Tokyo, JP</span>

  <!-- Seconds Indicator (Pulsing Ring) -->
  <div class="absolute bottom-4 w-1.5 h-1.5 bg-accent-teal rounded-full animate-ping"></div>

  <script>
    function updateClocks() {
        const displays = document.querySelectorAll('.clock-display');
        if (displays.length === 0) return;

        const now = new Date();
        const options: Intl.DateTimeFormatOptions = {
            timeZone: 'Asia/Tokyo',
            hour: '2-digit',
            minute: '2-digit',
            hour12: false
        };

        const timeString = new Intl.DateTimeFormat('en-US', options).format(now);

        displays.forEach(display => {
            display.textContent = timeString;
        });
    }

    setInterval(updateClocks, 1000);
    updateClocks();
  </script>
</div>
